<%= content_tag :div, class: 'col-12' do %>
  <% unless @error.is_a?(Hash) && @error['errorcode'] %>
    <% unless @organizations.empty? %>

      <%= content_tag :div, class: 'row' do %>
        <h2 class='col-12' id='organizations'>Organizations</h2>
      <% end %>
      <%= render partial: 'organization', collection: @organizations %>
    <% end %>
  <% else %>
    <%= content_tag :div, class: 'row' do %>
      <%= content_tag :div, class: 'col-xs-12' do %>
        <%= @error['message'] %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag :br %>
  <%= link_to 'New Organization', new_organization_path, class: 'btn btn-secondary' %>
<% end %>

